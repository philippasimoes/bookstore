<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
      http://www.liquibase.org/xml/ns/pro
      http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

    <changeSet id="01.create-catalog-schema" author="fdsimoes">
        <sql dbms="postgresql" endDelimiter=";">
            CREATE SCHEMA IF NOT EXISTS catalogservice
        </sql>

    </changeSet>
    <changeSet id="01-create-book-table" author="fdsimoes">
        <createTable tableName="catalogservice.book">
            <column name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="title" type="VARCHAR(512)"/>
            <column name="original_title" type="VARCHAR(512)"/>
            <column name="isbn" type="VARCHAR(256)"/>
            <column name="format" type="VARCHAR(256)"/>
            <column name="release_date" type="VARCHAR(256)"/>
            <column name="edition_date" type="VARCHAR(256)"/>
            <column name="genre" type="VARCHAR(1024)"/>
            <column name="edition" type="VARCHAR(256)"/>
            <column name="series" type="BOOLEAN"/>
            <column name="publisher" type="VARCHAR(256)"/>
            <column name="synopsis" type="VARCHAR(1024)"/>
            <column name="price" type="NUMERIC"/>
            <column name="promotional_price" type="NUMERIC"/>
            <column name="category" type="VARCHAR(50)"/>
            <column name="collection" type="VARCHAR(50)"/>
            <column name="availability" type="VARCHAR(256)"/>
            <column name="date_created" type="TIMESTAMP"/>
            <column name="date_updated" type="TIMESTAMP"/>
            <column name="stock_available" type="INTEGER"/>
        </createTable>
    </changeSet>

    <changeSet id="01-create-author-table" author="fdsimoes">
        <createTable tableName="catalogservice.author">
            <column name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(512)"/>
            <column name="original_full_name" type="VARCHAR(512)"/>
            <column name="date_of_birth" type="VARCHAR(256)"/>
            <column name="place_of_birth" type="VARCHAR(256)"/>
            <column name="date_of_death" type="VARCHAR(256)"/>
            <column name="place_of_death" type="VARCHAR(256)"/>
            <column name="about" type="VARCHAR(1024)"/>
        </createTable>
    </changeSet>

    <changeSet id="01-create-book-sample-table" author="fdsimoes">
        <createTable tableName="catalogservice.book_sample">
            <column name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="book_id" type="INTEGER"/>
            <column name="sample" type="TEXT"/>
        </createTable>
    </changeSet>

