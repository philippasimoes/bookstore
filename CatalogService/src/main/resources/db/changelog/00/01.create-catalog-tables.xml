            </column>
            <column name="book_id" type="INTEGER"/>
            <column name="customer_email" type="VARCHAR(50)"/>
            <column name="creation_date" type="TIMESTAMP"/>
            <column name="notification_date" type="TIMESTAMP"/>
        </createTable>
    </changeSet>-->

    <changeSet id="01-create-language-table" author="fdsimoes">
        <createTable tableName="catalogservice.language">
            <column name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="code" type="VARCHAR(10)"/>
            <column name="name" type="VARCHAR(10)"/>
        </createTable>
    </changeSet>

    <changeSet id="01-create-tag-table" author="fdsimoes">
        <createTable tableName="catalogservice.tag">
            <column name="id" type="INTEGER">
                <constraints nullable="false" primaryKey="true" unique="true"/>
            </column>
            <column name="tag" type="VARCHAR(50)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
