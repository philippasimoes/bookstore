<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
      http://www.liquibase.org/xml/ns/pro
      http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">

    <changeSet id="01.create-catalog-schema" author="fdsimoes">
        <sql dbms="postgresql" endDelimiter=";">
            CREATE SCHEMA IF NOT EXISTS notificationservice
        </sql>

    </changeSet>

    <changeSet id="01-create-notification-table" author="fdsimoes">
         <createTable tableName="notificationservice.notification">
             <column name="id" type="INTEGER">
                 <constraints nullable="false" primaryKey="true" unique="true"/>
             </column>
             <column name="book_id" type="INTEGER"/>
             <column name="customer_email" type="VARCHAR(50)"/>
             <column name="creation_date" type="TIMESTAMP"/>
             <column name="notification_date" type="TIMESTAMP"/>
         </createTable>
     </changeSet>
</databaseChangeLog>